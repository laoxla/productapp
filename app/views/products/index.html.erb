
<div class="page-header">
  <h1>MyProductApp <small>Our products are your products...</small></h1>
</div>

<div class="row">
<% @products.each do |product| %>

  <div id="product-<%=product.id%>" class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag product.photo %>
      <hr>
      <div class="caption">
        <h3><%= product.name %></h3>

        <strong><%= number_to_currency product.price %> </strong>
        <p><%= truncate product.description, length: 200 %></p>
        <p>

          <%= button_to add_to_cart_path(product_id: product.id), method: :post, class: "btn btn-success" do %>
                           Add To Cart <span class="glyphicon glyphicon-shopping-cart"></span>
                           <% end %>
      </div>
    </div>
  </div>

<% end %>
</div>
